                            <div class="tab-content">
                                <div class="tab-pane container active" id="mota"><%= gioi_thieu %>  </div>
                                <div class="tab-pane container fade" id="danhgia">
                                    <div id="product-reviews-list">

                                        <% for(let i=0;i<noidungdanhgia.length;i++){%>
                                            <% 
                                                let hovaten=noidungdanhgia[i].hovaten;
                                                let tieude=noidungdanhgia[i].tieude;
                                                let noidung=noidungdanhgia[i].noidung;
                                                let ngaythang=noidungdanhgia[i].ngaythang;
                                                let rating=noidungdanhgia[i].rating;   
                                            %> 

                                            <div class="media p-3 product-review">
                                                <img src="images/user.png" alt="John Doe" class="mr-3 mt-3 rounded-circle" style="width:20px;">
                                                <div class="media-body">
                                                    <div class="product-review-name">
                                                        <%= hovaten %> 
                                                    </div>
                                                    <span class="product-review-star">
                                                        <% let dem=0 %> 
                                                        <% for(let j=1;j<=Math.floor(rating);j++){%>
                                                            <i style="color: #ff5622;" class="fa fa-star"></i>
                                                            <% dem++ %>
                                                        <% } %>  
                                                        <% if(rating-Math.floor(rating)>=0.5){%>
                                                            <i style="color: #ff5622;" class="fa fa-star-half-full"></i>
                                                            <% dem++ %>
                                                        <% } %> 
                                                        <% for(let k=1;k<=5-dem;k++){%>
                                                            <i style="color: #ff5622;" class="fa fa-star-o"></i>
                                                        <%} %>  
                                                    </span>
                                                    <span class="product-review-time">
                                                        <%= ngaythang %> 
                                                    </span>

                                                    <div class="product-review-header-title">
                                                        <%= tieude %> 
                                                    </div>

                                                    <div class="product-review-header-content">
                                                        <%= noidung %> 
                                                    </div>
                                                </div>

                                            </div>

                                        <%} %> 
                                        
                                        <% if(count_dg[0]['count(*)']==0){%>
                                            <div class="product-review-buton">
                                                <!-- Button to Open the Modal -->
                                                     <% if(cothedanhgia){%>
                                                         <button type="button" class="btn-open-modal" data-toggle="modal" data-target="#myModal">
                                                             Viết đánh giá
                                                         </button>
                                                     <%}else{%>
                                                         <button type="button" class="btn-open-modal">
                                                             <a style="color: white;" href="/account/login">Đăng nhập để đánh giá sản phẩm</a>
                                                         </button>
                                                     <%} %> 
                                                     
                                            </div>
                                        <%}%>   
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- The Modal -->
                        <div class="modal" id="myModal">
                            <div class="modal-dialog">
                            <div class="modal-content">
                        
                                <!-- Modal Header -->
                                <div class="modal-header">
                                <div class="modal-review-title">
                                    <div class="modal-review-title-name">
                                        Đánh giá sản phẩm
                                    </div>
                                    <div class="modal-review-star">
                                        <i style="color: #ff5622;" data-alt="1" class="fa fa-star-o star"></i>
                                        <i style="color: #ff5622;" data-alt="2" class="fa fa-star-o star"></i>
                                        <i style="color: #ff5622;" data-alt="3" class="fa fa-star-o star"></i>
                                        <i style="color: #ff5622;" data-alt="4" class="fa fa-star-o star"></i>
                                        <i style="color: #ff5622;" data-alt="5" class="fa fa-star-o star"></i>
                                    </div>
                                </div>
                            
                                <button type="button" class="close close-modal" data-dismiss="modal">&times;</button>
                                </div>
                                
                                <!-- Modal body -->
                                <div class="modal-body">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="tieude" placeholder="Tiêu đề">
                                    </div>
                                    <div class="form-group">
                                        <textarea class="form-control" rows="5" id="comment" placeholder="Nội dung"></textarea>
                                      </div>
                                </div>
                        
                                <!-- Modal footer -->
                                <div class="modal-footer">
                                    <div class="modal-review-footer">
                                        <button data-id_sanpham="<%= id_sanpham %>" id="btn-submit-review" type="button" class="btn btn-primary" data-dismiss="modal">Gửi</button>
                                    </div>
                                </div>
                        
                            </div>
                            </div>
                        </div>
                        <!--kết thúc phần 2 tab-->
                    </div>
                    <div class="col-xl-3 col-md-12 col-sm-12">
                        <!--phần module right-->
                        <div class="module_right">
                            <!--phần quảng cáo dịch vụ-->
                            <div class="module_service_details">
                                <!--phần item chính-->
                                <div class="item_service">
                                    <div class="wrap_item">
                                        <div class="content_service">
                                            <img src="images/icon-service/productdetail-icon5.png" alt="">
                                            <p>Giao hàng nhanh chóng</p>
                                            <span>Chỉ trong vòng 24h đồng hồ</span>
                                        </div>
                                    </div>
                                </div>
                                <!--kết thúc phần item chính-->

                                <!--phần item chính-->
                                <div class="item_service">
                                    <div class="wrap_item">
                                        <div class="content_service">
                                            <img src="images/icon-service/productdetail-icon4.png" alt="">
                                            <p>Sản phẩm chính hãng</p>
                                            <span>Sản phẩm nhập khẩu 100%</span>
                                        </div>
                                    </div>
                                </div>
                                <!--kết thúc phần item chính-->

                                <!--phần item chính-->
                                <div class="item_service">
                                    <div class="wrap_item">
                                        <div class="content_service">
                                            <img src="images/icon-service/productdetail-icon3.png" alt="">
                                            <p>Đổi trả cực kì dễ dàng</p>
                                            <span>Đổi trả trong 2 ngày đầu tiên</span>
                                        </div>
                                    </div>
                                </div>
                                <!--kết thúc phần item chính-->

                                <!--phần item chính-->
                                <div class="item_service">
                                    <div class="wrap_item">
                                        <div class="content_service">
                                            <img src="images/icon-service/productdetail-icon2.png" alt="">
                                            <p>Mua hàng tiết kiệm</p>
                                            <span>Tiết kiệm hơn từ 10% - 30%</span>
                                        </div>
                                    </div>
                                </div>
                                <!--kết thúc phần item chính-->

                                <!--phần item chính-->
                                <div class="item_service">
                                    <div class="wrap_item">
                                        <div class="content_service">
                                            <img src="images/icon-service/productdetail-icon1.png" alt="">
                                            <p>Hotline mua hàng:</p>
                                            <span>(024)98657868</span>
                                        </div>
                                    </div>
                                </div>
                                <!--kết thúc phần item chính-->
                            </div>
                             <!--kết thúc phần quảng cáo dịch vụ-->

                            <!--phần gợi ý sản phẩm-->
                            <div class="module_best_sale_product">

                                <!--phần tiêu đề-->
                                <div class="heading">
                                    <div class="title-head">
                                        Có thể bạn thích
                                    </div>
                                </div>
                                <!--kết thúc phần tiêu đề-->


                                <!--phần item-->
                                <% for(let i=0;i<list_data_sanpham.length;i++){%>
                                    <% 
                                        let tensanpham=list_data_sanpham[i].ten_san_pham;
                                        let hinhanh=list_data_sanpham[i].hinhanh;
                                        let gia=list_data_sanpham[i].gia;
                                        let giamoi=list_data_sanpham[i].giamoi;
                                        let linksanpham='/chitietsanpham?id='+list_data_sanpham[i].id_sanpham;          
                                    %> 
                                    <div class="sale_off_today">
                                        <div class="item-small">
                                            <div class="product-mini-item">
                                                <a class="product-img" href="<%= linksanpham %>">
                                                    <img src="<%= hinhanh %>" alt="">
                                                </a>
    
                                                <div class="product-info">
                                                    <h3 class="product-name">
                                                        <a class="text1line" href="<%= linksanpham %>">
                                                            <%= tensanpham %> 
                                                        </a>
                                                    </h3>
                                                    
                                                    <% if(giamoi==0){%>
                                                        <div class="price-box">
                                                            <span class="price product-price">
                                                                <%= gia.toLocaleString() %>Đ
                                                            </span>
                                                        </div>
                                                    <% }else{%>
                                                        <div class="price-box">
                                                            <span class="price product-price">
                                                                <%= giamoi.toLocaleString() %>Đ
                                                            </span>
                        
                                                            <span class="price product-price-old">
                                                                <%= gia.toLocaleString() %>Đ
                                                            </span>
                                                        </div>
                                                    <% } %> 
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <%} %> 
                                
                                
                                <!--kết thúc phần item-->

                                
                            </div>
