        <div class="container">
            <div class="section_prd_feature">
                <div class="heading">
                    <div class="title-head">
                        Sản phẩm cùng loại
                    </div>
                </div>

                <!--phần list sản phẩm-->
                <div class="row">
                    <!-- Set up your HTML -->
                    <div class="owl-carousel product-related">

                        <% for(let i=0;i<list_goi_y_theo_noi_dung.length;i++){ %>
                            <% 
                                let tensanpham=list_goi_y_theo_noi_dung[i].ten_san_pham;
                                let hinhanh=list_goi_y_theo_noi_dung[i].hinhanh;
